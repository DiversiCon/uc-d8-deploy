{#
/**
 * bighero Twig Partial
 *
 */
#}

<div class="c-bighero">
  <div class="c-bighero__text">
    {% if content.heading %}
      <h1 class="c-bighero__heading">{{ content.heading }}</h1>
    {% endif %}
    {% if content.description %}
      <div class="c-bighero__description">
        {% autoescape false %}
          {{ content.description }}
        {% endautoescape %}
      </div>
    {% endif %}
  </div>
  <picture class="c-bighero__img">
    <source media="(max-width: 768px)" srcset="{{ content.imgSmall }}">
    <img src="{{ content.img }}" alt="">
  </picture>
</div>