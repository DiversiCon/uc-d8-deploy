{#
/**
 * @file
 * Quick Links sub-component inside feature
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{% set accordion_toggle = content.field_accordion_switch|field_value|render|render %}
{% set left_list_title = content.field_subheadline_text_0|field_value|render %}
{% set left_list_items = content.field_par_paragraph_ultd_0 %}
{% set left_list_footer_link = content.field_par_paragraph_single_5 %}
{% set right_list_title = content.field_subheadline_text_1|field_value|render %}
{% set right_list_items = content.field_par_paragraph_ultd_1 %}
{% set right_list_footer_link = content.field_par_paragraph_single_0 %}
{% set footer_link =  content.field_single_link %}

{% if ( accordion_toggle == 'mobile-accordion' ) or ( accordion_toggle == 'accordion' ) %}
<uc-accordion-group v-cloak="" :columns="2">
  <uc-accordion title="{{ left_list_title|convertQuotes }}"{% if accordion_toggle == 'mobile-accordion'  %} :mobile-only="true"{% endif %} tag="p">
    <ul>
      {{ left_list_items }}
    </ul>
    {{ left_list_footer_link }}
  </uc-accordion>
  <uc-accordion title="{{ right_list_title|convertQuotes }}"{% if accordion_toggle == 'mobile-accordion'  %} :mobile-only="true"{% endif %} tag="p">
    <ul>
      {{ right_list_items }}
    </ul>
    {{ right_list_footer_link }}
  </uc-accordion>
</uc-accordion-group>

{% else %}
<ul class="c-quicklinks-two-column">
  <li>
    {% if content.field_subheadline_text_0|render %}
    <h3 class="t-heading--list">{{ left_list_title }}</h3>
    {% endif %}
    <ul>
      {{ left_list_items }}
    </ul>
    {{ left_list_footer_link }}
  </li>
  <li>
    {% if content.field_subheadline_text_1|render %}
    <h3 class="t-heading--list">{{ right_list_title }}</h3>
    {% endif %}
    <ul>
      {{ right_list_items }}
    </ul>
    {{ right_list_footer_link }}
  </li>
</ul>
{% endif %}

{% if footer_link|field_value %}
  <p class="show-for-large">
    <a href="{{ footer_link.0['#url'] }}" class="c-cta-link c-cta-link--black">{{ footer_link.0['#title'] }}</a>
  </p>
{% endif %}